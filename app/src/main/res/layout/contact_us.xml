<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contactus_T"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="#e60505"
            android:gravity="center"
            android:text="Cotact Us"
            android:textColor="#fff"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold|italic" />

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactus_T"
            android:layout_marginTop="@dimen/_20sdp">

            <ImageView
                android:id="@+id/call_I"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:paddingLeft="@dimen/_40sdp"
                android:src="@drawable/callus" />
            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_toRightOf="@+id/call_I"
                android:text="Call Us"
                android:textColor="#fff"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/number_T"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/call_I"
                android:layout_centerInParent="true"
                android:paddingTop="@dimen/_5sdp"
                android:text="+20-01201108496"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

            <Button
                android:id="@+id/call_B"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/number_T"
                android:layout_centerInParent="true"
                android:background="#fa0202"
                android:text="Call Us"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="@dimen/_20sdp">

            <ImageView
                android:id="@+id/emil_I"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:paddingLeft="@dimen/_40sdp"
                android:src="@drawable/email" />

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_toRightOf="@+id/emil_I"
                android:text="Email Us"
                android:textColor="#fff"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/account_T"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/emil_I"
                android:layout_centerInParent="true"
                android:paddingTop="@dimen/_5sdp"
                android:text="engmohamedashraf00000@gmail.com"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

            <Button
                android:id="@+id/emailus_B"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/account_T"
                android:layout_centerInParent="true"
                android:background="#fa0202"
                android:text="Email Us"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_marginTop="@dimen/_20sdp">

            <ImageView
                android:id="@+id/location_I"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30sdp"
                android:paddingLeft="@dimen/_40sdp"
                android:src="@drawable/location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/location_I"
                android:text="Current Location"
                android:textColor="#fff"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/adress_T"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_I"
                android:layout_centerInParent="true"
                android:paddingTop="@dimen/_5sdp"
                android:text="barehim \n menouf \n menofia"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

            <Button
                android:id="@+id/showmap_B"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/adress_T"
                android:layout_centerInParent="true"
                android:background="#fa0202"
                android:text="Show Map"
                android:onClick="tomap"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/Open_B"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/showmap_B"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#fa0202"
                android:text="Open Hours"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold|italic" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout3"
            android:layout_marginBottom="@dimen/_60sdp">

            <TextView
                android:id="@+id/besocial_T"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:text="Be Social"
                android:textColor="#fff"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/besocial_T"
                android:layout_marginTop="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/facebook_I"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/tweeter_I"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_toRightOf="@+id/facebook_I"
                    android:layout_weight="1"
                    android:src="@drawable/twitter" />

                <ImageView
                    android:id="@+id/instgram_I"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_toRightOf="@+id/tweeter_I"
                    android:layout_weight="1"
                    android:src="@drawable/instagram" />

                <ImageView
                    android:id="@+id/youtube_I"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:layout_toRightOf="@+id/instgram_I"
                    android:layout_weight="1"
                    android:src="@drawable/youtube" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>